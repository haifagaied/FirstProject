{% if authors is defined and authors|length > 0 %}
    <p>Nombre d'auteurs : {{ authors|length }}</p>

    {% set total_books = 0 %}
    {% for author in authors %}
        {% set total_books = total_books + author.nb_books %}
    {% endfor %}
    <p>Nombre total de livres : {{ total_books }}</p>

    <ul>
        {% for author in authors %}
            <li>
                <a href="{{ path('author_details', {'id': author.id}) }}">Details</a>
                <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="100">
                {{ author.username|upper }} ({{ author.email }}) - Livres : {{ author.nb_books }}
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucun auteur trouv√©.</p>
{% endif %}
